{
  "name": "mysecrets",
  "version": "0.0.1",
  "description": "Store sensitive data on web",
  "main": "./dist/mysecrets.min.js",
  "types": "./dist/mysecrets.d.ts",
  "scripts": {
    "dev": "npm run tslint && tsc -m es6 --outDir dist",
    "dev:watch": "nodemon --exec 'npm run dev || exit 1'",
    "tslint": "tslint --project .",
    "build": "npm run dev && uglifyjs ./dist/mysecrets.js -o ./dist/mysecrets.min.js",
    "test": "npm run clean && jest && npm run clean",
    "test:coverage": "npm run clean && jest --coverage && npm run clean",
    "clean": "rimraf dist"
  },
  "author": "matjaz@matjazev.net",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "jest": "^23.6.0",
    "nodemon": "^1.17.5",
    "rimraf": "^3.0.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "uglify-js": "^3.4.9"
  }
}
